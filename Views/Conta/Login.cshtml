@model ByteBank.Forum.ViewModels.ContaLoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.EditorForModel()
        <br />
        <button class="btn btn-primary col" type="submit">Fazer Login</button>
        <br />
        <p class="alert-link col">@Html.ActionLink("Esqueci a senha.", "EsqueciSenha")</p>
        
    </div>
}